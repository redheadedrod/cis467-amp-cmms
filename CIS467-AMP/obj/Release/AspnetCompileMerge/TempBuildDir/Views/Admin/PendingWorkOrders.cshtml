@model IEnumerable<CIS467_AMP.Models.Maintenance.WorkOrder>

@{
    ViewBag.Title = "Pending Work Orders";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col col-md-2">
        <ul class="nav nav-pills nav-stacked">
            <li>@Html.ActionLink("Pending Work Orders", "PendingWorkOrders")</li>
            <li>@Html.ActionLink("Temp1", "Index")</li>
            <li>@Html.ActionLink("Temp2", "Index")</li>
            <li>@Html.ActionLink("Temp3", "Index")</li>
        </ul>
    </div>
    <div class="col-md-10">
        <h1 id="title">@ViewBag.Title</h1>
    </div>
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CreatedDateTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastStatusDateTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Priority)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ShortDesc)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LongDesc)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CreatedDateTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastStatusDateTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Priority)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ShortDesc)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LongDesc)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
