@model IEnumerable<CIS467_AMP.Models.StockRoom.StockRoomRequest>
@{  /* Author: Rodney Fulk
     * Logbook for Parts Request
     */

    //Sets tab bar title*@
    ViewBag.Title = "Order Requests";

    //Uses this scaffolding as main layout --
    //can change later, but the below cshtml is called by RenderBody() in _layout.cshmtl
    Layout = "~/Views/Shared/_Layout.cshtml";
} 

<div class="row">
    @Html.Partial("_LogbookLeftNavBar") @*Could put a model as second argument*@
    <div class="col-md-10">
        <h1 id="titleS">@ViewBag.Title</h1>
    </div>
    <div class="col col-md-10">
        <table class="table">
            <tr>
                <th>Order Number</th>
                <th>Date Requested</th>
                <th>Requested by</th>
                <th>Asset</th>
                <th>Order Status</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.ActionLink(item.Id.ToString(), "Request", "StockRoom", new { id = item.Id }, null)</td>
                    <td>@Html.DisplayFor(modelItem => item.Requested)</td>
                    <td>@Html.DisplayFor(modelItem => item.Worker.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.AssetInventory.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.StockRoomRequestStatus.Name)</td>
                </tr>
            }
        </table>
    </div>

</div>
